@model ProductDetailsViewModel

<div class="card mb-3 m-auto" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4 p-3 text-center">
            <img src="~/images/@Model.ImageUrl" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title p-2 rounded-1 bg-primary text-white">@Model.Name</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><small class="text-muted">@Model.Price</small></p>
                <h2 class="display-6 fs-5 fw-normal text-danger">Kategoriler</h2>
                <ul class="list-group list-group-horizontal">
                    @foreach (var item in Model.Categories)
                    {
                        <li class="list-group-item">@item.Name</li>
                    }
                </ul>
            </div>
        </div>
        <div class="card-footer d-grid">
            <button class="btn btn-success">Sepete ekle</button>
        </div>
    </div>
</div>